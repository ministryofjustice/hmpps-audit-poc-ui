{% extends "../partials/layout.njk" %}
{% from "./components/card/card.njk" import card %}

{% set pageTitle = applicationName + " - Home" %}

{% block content %}

  <main class="app-container govuk-body">
    <div class="govuk-width-container">
      <h1 class="govuk-heading-l govuk-!-margin-top-7">Sample Application</h1>
    </div>

    <div class="homepage-content">
      <div class="govuk-width-container">

        <ul class="govuk-grid-row card-group">
            <li class="govuk-grid-column-one-third card-group__item">
              {{ card({
                "href": '/graphql/demo',
                "clickable": "true",
                "heading": 'GraphQL Demo',
                "description": 'Demonstration on how a frontend service can integrate with a GraphQL API',
                "id": "graphql-demo"
              }) }}
            </li>
        </ul>

      </div>
    </div>  
  </main>

{% endblock %}
